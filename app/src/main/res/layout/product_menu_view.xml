<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="90dp"
    android:layout_height="100dp"
    android:background="@drawable/menu_buton_shape">


    <ImageView
        android:id="@+id/imgProduct"

        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/label1"
        android:contentDescription=""/>

    <TextView
        android:id="@+id/tvProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:padding="3dp"
        android:textColor="@color/colorOrangLow"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_editor_absoluteX="2dp"
        app:layout_editor_absoluteY="2dp" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:background="@color/colordark_alpha"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tvProductTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textAlignment="center"
            android:textColor="@color/colorWText"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvMenuProductId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </FrameLayout>

</android.support.constraint.ConstraintLayout>