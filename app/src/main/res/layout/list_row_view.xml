<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="1sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:layout_margin="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvItemValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text=""
                android:layout_marginEnd="4dp"
                android:layout_marginStart="2dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/colorOrang"/>
            <TextView
                android:id="@+id/tvItemCurr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text=""
                android:textSize="13sp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="2dp"
                android:textColor="@color/colorText"/>
            <TextView
                android:id="@+id/tvItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginHorizontal="5sp"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/colorWText" />

            <TextView
                android:id="@+id/tvItemId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="4dp">
            <TextView
                android:id="@+id/tvItemQn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="2dp"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/colorYallow"
                />
            <TextView
                android:id="@+id/tvItemPartialQn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="2dp"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/colorYallow"
                />
            <TextView
                android:id="@+id/tvItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="2dp"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/colorYallow"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/tvItemNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text=""
            android:textSize="14sp"
            android:textColor="@color/colorText"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>