<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main"
    style="@style/AppTheme.FormColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        style="@style/AppTheme.FormColor" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/AppTheme.myText"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="@string/customer" />

            <AutoCompleteTextView
                android:id="@+id/txCustomer"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                style="@style/AppTheme.myEdit"/>

            <TextView
                style="@style/AppTheme.myText"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="@string/notes" />

            <EditText
                android:id="@+id/txNotes"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                style="@style/AppTheme.myEdit"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/lyOrderItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorgray_alpha">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvTotal"
                        style="@style/AppTheme.myText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total"
                        android:textColor="#00FFAA"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/txTotal"
                        style="@style/AppTheme.myEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:textColor="#00FFAA"
                        android:textSize="18sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_margin="2dp">
                        <TextView
                            android:id="@+id/tvDiscount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/discount"
                            style="@style/AppTheme.myText"
                            android:textAlignment="center"/>

                        <EditText
                            android:id="@+id/txDiscount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="numberDecimal"
                            style="@style/AppTheme.myEdit"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_margin="2dp">
                        <TextView
                            android:id="@+id/tvPaid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/paid"
                            style="@style/AppTheme.myText"
                            android:textAlignment="center"/>

                        <EditText
                            android:id="@+id/txPaid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="numberDecimal"
                            style="@style/AppTheme.myEdit"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_margin="2dp">
                        <TextView
                            android:id="@+id/tvUnPaid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/unpaid"
                            style="@style/AppTheme.myText"
                            android:textAlignment="center"/>

                        <EditText
                            android:id="@+id/txUnPaid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:enabled="false"
                            android:ems="10"
                            android:inputType="numberDecimal"
                            style="@style/AppTheme.myEdit"/>
                    </LinearLayout>


                </LinearLayout>
                <ListView
                    android:id="@+id/lvOrderItems"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    style="@style/AppTheme.myEdit">

                </ListView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyProductMenus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/colorText">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/product" />

                    <AutoCompleteTextView
                        android:id="@+id/txProduct"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        style="@style/AppTheme.myEdit"/>

                    <Button
                        android:id="@+id/btSan"
                        style="@style/AppTheme.myMainButton"
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:text="@string/scnBarcode" />

                </LinearLayout>

                <GridView
                    android:id="@+id/gvCats"
                    style="@style/AppTheme.myText"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:columnWidth="80dp"
                    android:gravity="center"
                    android:horizontalSpacing="4dp"
                    android:numColumns="auto_fit"
                    android:stretchMode="spacingWidthUniform" />
                <GridView
                    android:id="@+id/gvProducts"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:columnWidth="100dp"
                    android:gravity="center"
                    android:numColumns="auto_fit"
                    android:stretchMode="spacingWidthUniform"
                    android:verticalSpacing="4dp"
                    android:horizontalSpacing="4dp"
                    android:background="@color/colorBgEdit"
                    style="@style/AppTheme.myText"
                    />

            </LinearLayout>



            </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>