<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle"  >
            <gradient android:startColor="@color/colorgray_alpha"
                android:endColor="@color/colorOrang_aloha" android:angle="90" />
            <corners android:radius="5dp" />
            <stroke android:width="1px" android:color="#AAAAAA" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle"  >
            <gradient android:startColor="@color/colorgray_alpha"
                android:endColor="@color/colorOrang" android:angle="90" />
            <corners android:radius="5dp" />
            <stroke android:width="1px" android:color="#FFFFFF" />
        </shape>
    </item>
</selector>