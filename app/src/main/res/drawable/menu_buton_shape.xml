<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape
            android:shape="rectangle"  >
            <gradient android:startColor="#202020"
                android:endColor="#808080" android:angle="90" />
            <corners android:radius="5dp" />
            <stroke android:width="1px" android:color="#B0B0B0" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle"  >
            <gradient android:startColor="#202020"
                android:endColor="@color/colorBgEdit" android:angle="90" />
            <corners android:radius="5dp" />
            <stroke android:width="1px" android:color="#FFFFFF" />
        </shape>
    </item>
</selector>